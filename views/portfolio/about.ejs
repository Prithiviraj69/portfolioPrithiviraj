<%- include('../partials/header') %>

<section class="about">
  <div class="container">
    <div class="section-header">
      <h2>ABOUT ME</h2>
      <h3>My Journey & Experience</h3>
    </div>
    
    <div class="about-content">
      <div class="about-image">
        <img src="<%= locals.profile && profile.avatar ? profile.avatar : '/images/default-avatar.png' %>" alt="Profile Image">
      </div>
      <div class="about-text">
        <% if (locals.profile) { %>
          <h3><%= profile.fullName %></h3>
          <h4><%= profile.title %></h4>
          <p><%= profile.bio %></p>
          
          <div class="social-links about-social">
            <% if (profile.socialLinks) { %>
              <% if (profile.socialLinks.github) { %>
                <a href="<%= profile.socialLinks.github %>" target="_blank"><i class="fab fa-github"></i></a>
              <% } %>
              <% if (profile.socialLinks.linkedin) { %>
                <a href="<%= profile.socialLinks.linkedin %>" target="_blank"><i class="fab fa-linkedin"></i></a>
              <% } %>
              <% if (profile.socialLinks.twitter) { %>
                <a href="<%= profile.socialLinks.twitter %>" target="_blank"><i class="fab fa-twitter"></i></a>
              <% } %>
              <% if (profile.socialLinks.email) { %>
                <a href="mailto:<%= profile.socialLinks.email %>"><i class="fas fa-envelope"></i></a>
              <% } %>
            <% } %>
          </div>
          
          <% if (profile.resumeUrl) { %>
            <a href="<%= profile.resumeUrl %>" class="btn btn-primary" target="_blank">Download Resume</a>
          <% } %>
        <% } else { %>
          <h3>John Doe</h3>
          <h4>Full Stack Developer</h4>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, nisl vel ultricies lacinia, nisl nisl aliquam nisl, eget aliquam nisl nisl sit amet nisl. Sed euismod, nisl vel ultricies lacinia, nisl nisl aliquam nisl, eget aliquam nisl nisl sit amet nisl.</p>
          
          <div class="social-links about-social">
            <a href="#" target="_blank"><i class="fab fa-github"></i></a>
            <a href="#" target="_blank"><i class="fab fa-linkedin"></i></a>
            <a href="#" target="_blank"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fas fa-envelope"></i></a>
          </div>
          
          <a href="#" class="btn btn-primary" target="_blank">Download Resume</a>
        <% } %>
      </div>
    </div>
  </div>
</section>

<section class="experience">
  <div class="container">
    <div class="section-header">
      <h2>MY EXPERIENCE</h2>
      <h3>Work Experience</h3>
    </div>
    
    <div class="timeline">
      <% if (locals.profile && profile.experience && profile.experience.length > 0) { %>
        <% profile.experience.forEach((exp, index) => { %>
          <div class="timeline-item">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <h4><%= exp.position %> at <%= exp.company %></h4>
              <span class="timeline-date"><%= exp.duration %></span>
              <p><%= exp.description %></p>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="timeline-item">
          <div class="timeline-dot"></div>
          <div class="timeline-content">
            <h4>Software Engineer at Company</h4>
            <span class="timeline-date">2020 - Present</span>
            <p>Working on various web development projects using modern technologies.</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-dot"></div>
          <div class="timeline-content">
            <h4>Junior Developer at Company</h4>
            <span class="timeline-date">2018 - 2020</span>
            <p>Started my career as a junior developer working on frontend projects.</p>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</section>

<section class="education">
  <div class="container">
    <div class="section-header">
      <h2>MY EDUCATION</h2>
      <h3>Academic Background</h3>
    </div>
    
    <div class="timeline">
      <% if (locals.profile && profile.education && profile.education.length > 0) { %>
        <% profile.education.forEach((edu, index) => { %>
          <div class="timeline-item">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <h4><%= edu.degree %> from <%= edu.institution %></h4>
              <span class="timeline-date"><%= edu.year %></span>
              <p><%= edu.description %></p>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="timeline-item">
          <div class="timeline-dot"></div>
          <div class="timeline-content">
            <h4>Master's degree in Computer Applications</h4>
            <span class="timeline-date">2020-2022</span>
            <p>Studied advanced computer applications and software development.</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-dot"></div>
          <div class="timeline-content">
            <h4>Bachelor's degree in Computer Science</h4>
            <span class="timeline-date">2016-2020</span>
            <p>Studied computer science fundamentals and programming.</p>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
