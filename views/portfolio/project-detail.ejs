<%- include('../partials/header') %>

<section class="project-detail">
  <div class="container">
    <div class="project-header">
      <h1><%= project.title %></h1>
      <div class="project-meta">
        <span class="project-category"><%= project.category %></span>
        <span class="project-date"><%= new Date(project.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
      </div>
    </div>
    
    <div class="project-cover">
      <img src="<%= project.coverImage %>" alt="<%= project.title %>">
    </div>
    
    <div class="project-content">
      <div class="project-description">
        <h2>Project Description</h2>
        <p><%= project.description %></p>
      </div>
      
      <div class="project-technologies">
        <h2>Technologies Used</h2>
        <div class="tech-tags">
          <% project.technologies.forEach(tech => { %>
            <span class="tech-tag"><%= tech %></span>
          <% }) %>
        </div>
      </div>
      
      <div class="project-tech-stack">
        <h2>Tech Stack</h2>
        <ul>
          <% project.techStack.forEach(tech => { %>
            <li><%= tech %></li>
          <% }) %>
        </ul>
      </div>
      
      <% if (project.images && project.images.length > 0) { %>
        <div class="project-gallery">
          <h2>Project Gallery</h2>
          <div class="gallery-grid">
            <% project.images.forEach(image => { %>
              <div class="gallery-item">
                <img src="<%= image %>" alt="<%= project.title %> screenshot">
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>
      
      <div class="project-links">
        <% if (project.demoUrl) { %>
          <a href="<%= project.demoUrl %>" class="btn btn-primary" target="_blank">View Demo</a>
        <% } %>
        <% if (project.githubUrl) { %>
          <a href="<%= project.githubUrl %>" class="btn btn-outline" target="_blank">View Code</a>
        <% } %>
      </div>
    </div>
    
    <div class="back-to-projects">
      <a href="/projects" class="btn btn-outline"><i class="fas fa-arrow-left"></i> Back to Projects</a>
    </div>
  </div>
</section>

<style>
  .project-detail {
    padding: 60px 0;
  }
  
  .project-header {
    text-align: center;
    margin-bottom: 30px;
  }
  
  .project-header h1 {
    font-size: 2.5rem;
    margin-bottom: 10px;
    color: var(--primary-color);
  }
  
  .project-meta {
    display: flex;
    justify-content: center;
    gap: 20px;
    color: var(--text-light);
  }
  
  .project-cover {
    margin-bottom: 40px;
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow);
  }
  
  .project-cover img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .project-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .project-description,
  .project-technologies,
  .project-tech-stack,
  .project-gallery {
    margin-bottom: 40px;
  }
  
  .project-content h2 {
    font-size: 1.5rem;
    margin-bottom: 15px;
    color: var(--primary-color);
  }
  
  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  
  .tech-tag {
    background-color: var(--bg-light);
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 0.9rem;
  }
  
  .project-tech-stack ul {
    list-style: disc;
    padding-left: 20px;
  }
  
  .project-tech-stack li {
    margin-bottom: 5px;
  }
  
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }
  
  .gallery-item {
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow);
  }
  
  .gallery-item img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }
  
  .gallery-item:hover img {
    transform: scale(1.05);
  }
  
  .project-links {
    display: flex;
    gap: 15px;
    margin-bottom: 40px;
  }
  
  .back-to-projects {
    margin-top: 20px;
  }
  
  @media (max-width: 768px) {
    .project-header h1 {
      font-size: 2rem;
    }
    
    .project-meta {
      flex-direction: column;
      gap: 5px;
    }
  }
</style>

<%- include('../partials/footer') %>
